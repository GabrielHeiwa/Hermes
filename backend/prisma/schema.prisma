// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  password      String
  Phone         Phone[]
  MessagesGroup MessagesGroup[]
  Messenger     Messenger[]

  @@map("users")
}

model Phone {
  id           String      @id @default(uuid())
  phone_number String
  description  String?
  session      String
  user_id_fk   String
  user         User        @relation(fields: [user_id_fk], references: [id])
  Messenger    Messenger[]

  @@map("phone_numbers")
}

model MessagesGroup {
  id         String      @id @default(uuid())
  title      String
  user_id_fk String
  user       User        @relation(fields: [user_id_fk], references: [id])
  messages   Message[]
  messengers Messenger[]

  @@map("messages_groups")
}

model Message {
  id                   String        @id @default(uuid())
  message              String
  message_group        MessagesGroup @relation(fields: [messages_group_id_fk], references: [id])
  messages_group_id_fk String

  @@map("messages")
}

model PhoneNumbersGroup {
  id              String    @id @default(uuid())
  messenger_id_fk String
  messenger       Messenger @relation(fields: [messenger_id_fk], references: [id])
  phone_numbers   Phones[]

  @@map("phone_numbers_group")
}

model Phones {
  id                    String            @id @default(uuid())
  phone_number          String
  phone_numbers_group   PhoneNumbersGroup @relation(fields: [phone_number_group_id], references: [id])
  phone_number_group_id String

  @@map("phones")
}

model Messenger {
  id                  String              @id @default(uuid())
  title               String
  hour_start          String
  hour_end            String
  days_running        String
  phone_id_fk         String
  user                User                @relation(fields: [userId], references: [id])
  phone               Phone               @relation(fields: [phone_id_fk], references: [id])
  message_group_id_fk String
  message_group       MessagesGroup       @relation(fields: [message_group_id_fk], references: [id])
  phone_numbers_group PhoneNumbersGroup[]
  userId              String

  @@map("messengers")
}
